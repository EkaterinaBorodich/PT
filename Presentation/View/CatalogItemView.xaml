<Window x:Class="Presentation.View.CatalogItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="CatalogItemView" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding ItemId, UpdateSourceTrigger=PropertyChanged}" ToolTip ="Item ID"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" ToolTip ="Description"/>
            <Button Content="Add Item" Command="{Binding AddCatalogItemCommand}"/>
            <Button Content="Update Item" Command="{Binding UpdateCatalogItemCommand}"/>
            <Button Content="Delete Item" Command="{Binding DeleteCatalogItemCommand}"/>
            <Button Content="Load Item" Command="{Binding LoadCatalogItemCommand}" CommandParameter="{Binding ItemId}"/>
        </StackPanel>
    </Grid>
</Window>